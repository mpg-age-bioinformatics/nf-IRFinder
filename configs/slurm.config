    }
    withName:noRep_diff {
        executor='slurm'
        queue="${params.queue}"
        cpus=4
        memory='40GB'
        time='23h'
        container = "${params.image_folder}irfinder-1.3.1.sif"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir"
    }
    withName:wRep_diff {
        executor='slurm'
        queue="${params.queue}"
        cpus=4
        memory='40GB'
        time='23h'
        container = "${params.image_folder}deseq2-1.38.0.sif"
        containerOptions = "${params.extra_mounts} -B ${params.project_folder}:/workdir"
    }
}